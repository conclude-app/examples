{
    "author": "Service Desk Dept",
    "type": "custom",
    "name": "service-desk",
    "label": "Service desk",
    "description": "Service desk ticketing system",
    "attributes": [
        {
            "name": "title",
            "type": "string",
            "label": "Subject",
            "placeholder": "What is your inquiry about?",
            "mandatory": true
        },
        {
            "name": "body",
            "type": "string",
            "label": "Description",
            "placeholder": "Please provide details here"
        },
        {
            "name": "conclusion",
            "type": "text",
            "label": "Resolution",
            "placeholder": "What is the resolution?"
        },
        {
            "name": "category",
            "type": "select",
            "label": "Category (internal use)",
            "visible": "edit",
            "default_value": "general",
            "options": [
                {
                    "name": "general",
                    "label": "General question"
                },
                {
                    "name": "software",
                    "label": "Software problem"
                },
                {
                    "name": "hardware",
                    "label": "Hardware problem"
                },
                {
                    "name": "network",
                    "label": "Network problem"
                }
            ]
        }
    ],
    "launch_button": "Create Ticket",
    "create_caption": "Ask for Help",
    "edit_caption": "Update Ticket",
    "conclude_caption": "Close Ticket",
    "install": [
        {
            "setting": "members",
            "description": "Who are the members of the service desk?"
        },
        {
            "setting": "alert",
            "description": "Who should receive alerts when a ticket is updated?"
        }
    ]
}